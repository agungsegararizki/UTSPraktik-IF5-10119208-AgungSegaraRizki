<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CekActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp">
        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/btn_back"
            android:layout_width="19dp"
            android:layout_height="16dp"
            android:layout_marginLeft="2dp"
            android:src="@drawable/btn_back"
            android:onClick="tekanback"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_form"
            android:layout_below="@id/btn_back"
            android:text="Cek Kembali Isian Data"
            android:textSize="20sp"
            android:textColor="@color/netral"
            android:textStyle="bold"
            android:layout_marginTop="36dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_jenistes"
            android:layout_below="@id/txt_form"
            android:text="Jenis tes"
            android:textSize="12sp"
            android:textColor="@color/netral"
            android:textStyle="bold"
            android:layout_marginTop="36dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_konfir"
            android:layout_below="@id/txt_jenistes"
            android:text="Tanggal Konfirmasi"
            android:textSize="12sp"
            android:textColor="@color/netral"
            android:textStyle="bold"
            android:layout_marginTop="36dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_nik"
            android:layout_below="@id/txt_konfir"
            android:text="NIK"
            android:textSize="12sp"
            android:textColor="@color/netral"
            android:textStyle="bold"
            android:layout_marginTop="36dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_nama"
            android:layout_below="@id/txt_nik"
            android:text="Nama"
            android:textSize="12sp"
            android:textColor="@color/netral"
            android:textStyle="bold"
            android:layout_marginTop="36dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_tgllahir"
            android:layout_below="@id/txt_nama"
            android:text="Tanggal Lahir"
            android:textSize="12sp"
            android:textColor="@color/netral"
            android:textStyle="bold"
            android:layout_marginTop="36dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_jeniskelamin"
            android:layout_below="@id/txt_tgllahir"
            android:text="Jenis Kelamin"
            android:textSize="12sp"
            android:textColor="@color/netral"
            android:textStyle="bold"
            android:layout_marginTop="36dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hubungan"
            android:layout_below="@id/txt_jeniskelamin"
            android:text="Hubungan Dengan Anda"
            android:textSize="12sp"
            android:textColor="@color/netral"
            android:textStyle="bold"
            android:layout_marginTop="36dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ubah"
            style="@style/tombolputih"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="32dp"
            android:text="Ubah"
            android:textColor="@color/netral"
            android:textSize="14sp"
            android:textStyle="bold"
            android:onClick="tekanback"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cek"
            style="@style/tombolhejo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_above="@id/btn_ubah"
            android:text="Cek Hasil Tes"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:onClick="tekancek"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>